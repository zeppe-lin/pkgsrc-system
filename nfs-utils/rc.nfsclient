#!/bin/sh
#
# /etc/rc.d/nfs: start/stop nfs client
#

case $1 in
start)
	/bin/mount -a -t nfs
	;;
stop)
	/bin/umount -a -t nfs,nfs4
	;;
restart)
	$0 stop
	$0 start
	;;
status)
	if [ -n "$(/bin/findmnt -t nfs,nfs4)" ]; then
		echo "nfs(4) is mounted"
	else
		echo "nfs(4) is unmounted"
	fi
	;;
*)
	echo "usage: $0 [start|stop|restart|status]"
	;;
esac

# End of file.
