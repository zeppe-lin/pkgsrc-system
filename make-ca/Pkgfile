# Description: Deliver and manage a complete PKI configuration
# URL:         https://github.com/lfs-book/make-ca

name=make-ca
version=1.16
release=1
source="https://github.com/lfs-book/$name/archive/v$version/$name-$version.tar.gz
	manpage.patch"

build() {
	cd $name-$version

	sed -i 's|^\(LIBEXECDIR=\).*|\1/usr/lib/make-ca|' Makefile

	make V=1
	make DESTDIR=$PKG install

	# The manual page is generated by help2man perl script, so apply the
	# patch after install.
	patch -Np1 -i $SRC/manpage.patch $PKG/usr/share/man/man8/$name.8
}
