# Description: RFC2131-compliant DHCP client daemon
# URL:         https://roy.marples.name/projects/dhcpcd
# Depends on:  eudev

name=dhcpcd
version=10.0.0
release=1
source="https://github.com/NetworkConfiguration/$name/archive/refs/tags/$name-$version.tar.gz
	rc.$name"

build() {
	# build in separate dir is broken
	cd $name-$name-$version

	./configure                       \
		--prefix=                 \
		--sysconfdir=/etc/dhcpcd  \
		--libexecdir=/lib/dhcpcd  \
		--dbdir=/var/lib/dhcpcd   \
		--rundir=/run/dhcpcd      \
		--enable-privsep          \
		--privsepuser=dhcpcd      \

	make V=1
	make DESTDIR=$PKG install

	chmod -R 755 $PKG/var
	install -m 0755 -D $SRC/rc.dhcpcd $PKG/etc/rc.d/dhcpcd

	chmod -R u+w $PKG
}
