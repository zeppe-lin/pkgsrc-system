# Description: Compression and file packaging/archive utility
# URL:         https://infozip.sourceforge.net/Zip.html
# Depends on:  bzip2

name=zip
version=3.0
release=2
source="https://downloads.sourceforge.net/sourceforge/infozip/zip30.tar.gz
	zip-3.0-currdir.patch
	zip-3.0-exec-shield.patch
	zip-3.0-format-security.patch
	zip-3.0-no-crypt.patch
	zip-3.0-pic.patch
	zip-gnu89-build.patch
	zipnote.patch"

build() {
	for f in $SRC/*.patch; do
		patch -d zip30 -Np1 -i $f
	done

	make -C zip30 -f unix/Makefile LOCAL_ZIP="$CFLAGS" prefix=/usr \
		generic_gcc
	make -C zip30 -f unix/Makefile INSTALL=install prefix=$PKG/usr \
		MANDIR=$PKG/usr/share/man/man1 install
}
