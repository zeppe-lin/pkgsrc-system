# Description: ALSA libraries
# URL:         https://www.alsa-project.org/

name=alsa-lib
version=1.2.15
release=2
source="https://www.alsa-project.org/files/pub/lib/$name-$version.tar.bz2
	up-to-f30c355.patch"

build() {
	patch -d $name-$version -Np1 -i $SRC/up-to-f30c355.patch

	mkdir build; cd build

	autoreconf -fiv ../$name-$version
	../$name-$version/configure \
		--prefix=/usr \
		--disable-python \

	make V=1
	make DESTDIR=$PKG install

	# Remove junk
	rm -f $PKG/usr/share/alsa/alsa.conf.d/README
}
