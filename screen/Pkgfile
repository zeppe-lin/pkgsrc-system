# Description: Screen manager with VT100/ANSI terminal emulation 
# URL:         https://www.gnu.org/software/screen/
# Depends on:  libxcrypt linux-pam ncurses

name=screen
version=5.0.1
release=1
#source="https://ftp.gnu.org/gnu/$name/$name-$version.tar.gz
source="https://git.savannah.gnu.org/cgit/screen.git/snapshot/$name-v.$version.tar.gz
	pam.$name"

build() {
	# build in separate dir is broken
	cd $name-v.$version/src

	autoreconf -fi
	./configure                  \
		--prefix=/usr        \
		--enable-colors256   \
		--enable-rxvt_osc    \
		--enable-pam         \
		--enable-utmp        \
		--runstatedir=/run   \

	make V=1
	make DESTDIR=$PKG install

	# pam
	install -m 0644 -D $SRC/pam.$name $PKG/etc/pam.d/$name

	# fix perms
	chmod -s $PKG/usr/bin/$name-$version

	# remove junk
	rm -r $PKG/usr/share/info
}
