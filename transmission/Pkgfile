# Description: BitTorrent client/daemon with command-line and web user interface
# URL:         https://transmissionbt.com/
# Depends on:  curl libevent python

# XXX Python package needs only to build third-party/libpsl dependency.
#     The good behaviour is to add libpsl package and get rid of obsoleted
#     python(2) dependency.

name=transmission
version=4.0.6
release=2
source="https://github.com/$name/$name/releases/download/$version/$name-$version.tar.xz
	miniupnp.patch
	rc.$name"

build() {
	patch -d $name-$version -p1 -i $SRC/miniupnp.patch

	cmake -S $name-$version -B build -G Ninja  \
		-D CMAKE_BUILD_TYPE=Release        \
		-D CMAKE_INSTALL_PREFIX=/usr       \
		-D ENABLE_GTK=OFF                  \
		-D ENABLE_NLS=OFF                  \
		-D ENABLE_QT=OFF                   \
		-D ENABLE_TESTS=OFF                \
		-D INSTALL_LIB=OFF                 \
		-D RUN_CLANG_TIDY=OFF              \
		-D ENABLE_CLI=ON                   \
		-D ENABLE_DAEMON=ON                \
		-D INSTALL_DOC=ON                  \

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install

	# service
	install -m 0755 -D $SRC/rc.$name $PKG/etc/rc.d/$name

	# remove junk
	rm -r $PKG/usr/share/doc
	find $PKG -name '*LICENSE*' -o -name '*LEGAL*' -delete
}
